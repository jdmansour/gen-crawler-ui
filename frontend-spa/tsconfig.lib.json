{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/index.ts",
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.stories.*",
    "src/**/*.test.*",
    "src/main.tsx",
    "src/stories/**/*",
    "src/elements/**/*"
  ]
}